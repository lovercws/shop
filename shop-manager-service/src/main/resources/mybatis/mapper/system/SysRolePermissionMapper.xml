<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lovecws.shop.system.dao.impl.SysRolePermissionDaoImpl">
	<resultMap id="SysRolePermissionResultMap" type="com.lovecws.shop.system.entity.SysRolePermission">
		<id column="role_permission_id" property="rolePermissionId" />
		<result column="role_permission_status" property="rolePermissionStatus"/>
		
		<result column="creator" property="creator"/>
		<result column="create_time" property="createTime" />

		<result column="role_id" property="roleId" jdbcType="INTEGER" />
		<result column="permission_id" property="permissionId" jdbcType="INTEGER" />
	</resultMap>
	<sql id="SysRolePermissionColumn">
		role_permission_id,role_permission_status,creator,create_time,role_id,permission_id
	</sql>

	<!-- 查询角色权限列表 -->
	<select id="listByColumn" resultMap="SysRolePermissionResultMap"
		parameterType="map">
		select
		<include refid="SysRolePermissionColumn"></include>
		from sys_role_rermission
		<where>
			<if test="roleId!=null and roleId!=''">
				and role_id=#{roleId}
			</if>
			<if test="permissionId!=null and permissionId!=''">
				and permission_id=#{permissionId}
			</if>
			<if test="rolePermissionStatus!=null and rolePermissionStatus!=''">
				and role_permission_status=#{rolePermissionStatus}
			</if>
		</where>
		<if test="beginIndex!=null and numPerPage!=null">
			limit #{beginIndex},#{numPerPage}
		</if>
	</select>
    
    <!-- 获取角色权限数量  -->
    <select id="getCountByColumn" resultType="LONG">
    	select count(role_permission_id) from sys_role_permission
    	<where>
    	    <if test="roleId!=null and roleId!=''">
				and role_id=#{roleId}
			</if>
			<if test="permissionId!=null and permissionId!=''">
				and permission_id=#{permissionId}
			</if>
			<if test="rolePermissionStatus!=null and rolePermissionStatus!=''">
				and role_permission_status=#{rolePermissionStatus}
			</if>
		</where>
    </select>
    
	<!-- 获取角色权限详情 -->
	<select id="selectByPrimaryKey" resultType="SysRolePermission"
		parameterType="map">
		select
		<include refid="SysRolePermissionColumn"></include>
		from sys_role_permission
		where role_permission_id = #{rolePermissionId}
	</select>
	
    <!-- 删除角色权限 -->
    <delete id="deleteByPrimaryKey" parameterType="map">
       delete from sys_role_permission where role_permission_id=#{rolePermissionId}
    </delete>

	<!-- 插入角色权限-->
	<insert id="insert" parameterType="SysRolePermission" useGeneratedKeys="true"
		keyProperty="rolePermissionId">
		insert into sys_role_permission
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="rolePermissionStatus != null">
				role_permission_status,
			</if>
			<if test="creator != null">
				creator,
			</if>
			<if test="createTime != null">
				create_time,
			</if>
			<if test="roleId != null">
				role_id,
			</if>
			<if test="permissionId != null">
				permission_id,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="rolePermissionStatus != null">
				#{rolePermissionStatus},
			</if>
			<if test="creator != null">
				#{creator},
			</if>
			<if test="createTime != null">
				#{createTime},
			</if>
			<if test="roleId != null">
				#{roleId},
			</if>
			<if test="permissionId != null">
				#{permissionId},
			</if>
		</trim>
	</insert>

	<!-- 更改角色权限 -->
	<update id="updateByPrimaryKey" parameterType="SysRolePermission">
		update sys_role_permission
		<set>
			<if test="rolePermissionStatus != null">
				role_permission_status=#{rolePermissionStatus},
			</if>
			<if test="creator != null">
				creator=#{creator},
			</if>
			<if test="createTime != null">
				create_time=#{createTime},
			</if>
			<if test="role_id != null">
				role_id=#{role_id},
			</if>
			<if test="permissionId != null">
				permission_id=#{permissionId},
			</if>
		</set>
		where role_permission_id = #{rolePermissionId}
	</update>
</mapper>